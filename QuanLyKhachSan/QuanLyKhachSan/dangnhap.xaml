<Window x:Class="QuanLyKhachSan.dangnhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyKhachSan"
        mc:Ignorable="d"
        Title="dangnhap" Height="450" Width="800">
    <Grid Margin="10">
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderThickness="1" BorderBrush="Black"  Margin="10" CornerRadius="10" Height="200" Width="350">
                <StackPanel Margin="10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Content="ĐĂNG NHẬP " Grid.ColumnSpan="2" Grid.Row="0" FontSize="20" HorizontalAlignment="Center" />
                        <Label Margin="10" Content="Tên Đăng  Nhập" Grid.Column="0" Grid.Row="1"/>
                        <Label Margin="10" Content="Mật Khẩu" Grid.Column="0" Grid.Row="2"/>
                        <TextBox x:Name="txt_dn" Margin="10" Grid.Column="1" Grid.Row="1"/>
                        
                        <Grid Margin="10" Grid.Column="1" Grid.Row="2">
                            <PasswordBox x:Name="txt_pass"  />
                            <TextBox x:Name="txt_show" Visibility="Collapsed"/>
                            <CheckBox x:Name="cb_ht"                                  
                                  HorizontalAlignment="Right" 
                                  VerticalAlignment="Center"
                                  Click="Cb_ht_Click"
                                  Margin="0,0,5,0 "    
                                  ClickMode="Press"/>
                        </Grid>
                        
                        <Button Content="Đăng Nhập" 
                                Grid.ColumnSpan="2" 
                                Grid.Row="4" 
                                Margin="10" Width="70"  Background="YellowGreen" 
                                HorizontalAlignment="Center" 
                                Click="Bt_dn"/>
                    </Grid>
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Window>
